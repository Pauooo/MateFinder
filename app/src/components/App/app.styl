@require "app/styles/charte"

#app
	font-size: 1em
	text-align: center
	font-family: "Montserrat", sans-serif
	height: 100vh

	img
		margin: 2em auto
		height: 20%

.toast
	background-color: $purple-grey
	font-size: 1.5em
	color: $yellow

	.button-toast
		margin-top: .5em
		display: flex
		justify-content: center

		button
			background: none
			border: .1em solid $yellow
			border-radius: .5em
			padding: .3em
			color: $yellow
			font-size: .8em

		.accepter
			margin-right: 1em

main
	display: flex
	justify-content: space-around
	align-items: flex-start

	.landing-message
		width: 18em
		color: $purple-grey
		margin: 2em 0 8em 0
		font-family: "Roboto Slab", serif
		line-height: 1.3
		text-shadow: 0 1px 1.5px rgba(0, 0, 0, 0.50)

		h3
			font-size: 1.5em
			margin-bottom: 0.5em

		p
			font-size: 1.2em
			font-style: italic

	#right-panel
		.landing-message
			text-align: left

	#left-panel
		.landing-message
			text-align: right
