	 src: url(/font/maiden_crimes-webfont.otf)


#app
	font-size: 1em
	text-align: center
	font-family: "Montserrat", sans-serif
	height: 100vh


#mate-finder-div
	max-width: 31.5em
	display: flex
	justify-content: center
	flex-direction: column
	margin: 5em auto

	.fa-star
		color: $yellow
		align-self: center

