//
@media screen and (min-width: 750px)
	#mate-finder-title
		font-size: 3.5em

	#mate-finder-desc
		text-align: right
		margin-left: 44%

	#mate-finder-div
		max-width: 31.5em
		display: flex
		justify-content: center
		flex-direction: column
		margin: 5em auto

		.fa-star
			position: relative
			left: .67em
			top: .35em
