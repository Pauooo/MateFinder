@require "app/styles/charte"

#app
	font-size: 1em
	text-align: center
	font-family: "Montserrat", sans-serif
	height: 100vh

	img
		margin-top: 2em
		font-size: 2em

.toast
	background-color: $purple-grey
	font-size: 1.5em
	color: $yellow

	.button-toast
		margin-top: .5em
		display: flex
		justify-content: center

		button
			background: none
			border: .1em solid $yellow
			border-radius: .5em
			padding: .3em
			color: $yellow
			font-size: .8em

		.accepter
			margin-right: 1em

main
	display: flex
	justify-content: space-around
	align-items: flex-start

	.landing-message
		width: 20em
		color: $purple-grey
		margin: 2em 0 8em 0

		h3
			font-size: 1.8em
			font-weight: 600
			text-shadow: 0 1px 1px black

		p
			font-size: 1.2em

	#right-panel
		.landing-message
			text-align: left

	#left-panel
		.landing-message
			text-align: right
