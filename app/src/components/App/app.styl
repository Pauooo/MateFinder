@require "app/styles/charte"

#app
	font-size: 1em
	text-align: center
	font-family: "Montserrat", sans-serif
	height: 100vh

#mate-finder-img
	margin: 2em auto
	max-width: 100%
	height: 20%
	&:hover
		animation-name: floating
		animation-duration: .2s
		animation-iteration-count: 3


@keyframes floating
	0%
		transform: translateY(0%)
	50%
		transform: translateY(8%)
	100%
		transform: translateY(0%)

.toast
	background-color: $purple-grey
	font-size: 1.5em
	color: $yellow

	.button-toast
		margin-top: .5em
		display: flex
		justify-content: center

		button
			background: none
			border: .1em solid $yellow
			border-radius: .5em
			padding: .3em
			color: $yellow
			font-size: .8em

		.accepter
			margin-right: 1em

main
	display: flex
	justify-content: space-around
	align-items: flex-start
