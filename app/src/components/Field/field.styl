.field
	position: relative

	/*
	 * Children
	 */
	&-input
		display: block
		border: 1px solid #2F4F4F
		color: #777
		font-size: 1rem
		height: 2.5em
		width: 80%
		margin: .4em 0
		padding: 0 1em

		&::placeholder
			color: #777

	&-label
		display: none
		color: #777
		position: absolute
		top: .75em
		left: 1.5em
		font-family: 'Source Sans Pro'
		text-transform: uppercase
		font-size: .8em


	/*
	 * Modifiers
	 */

	&--has-error &
		&-input
			border-color: red
		&-label
			color: red

	&--has-focus &
		&-input
			border-color: #528B8B

		&-label
			color: #528B8B
