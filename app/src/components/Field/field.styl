@require "app/styles/charte"

.field
	position: relative

	/*
	 * Children
	 */
	&-input
		display: block
		border: 1px solid #2F4F4F
		background-color: $grey
		font-size: 1rem
		height: 2.5em
		width: 15em
		margin: .4em 0
		padding: 0 1em
		color: $purple-grey


		&::placeholder
			color: $purple-grey
			text-align: right
			font-style: italic
			font-size: .8em

	&-label
		display: none
		color: $purple-grey
		position: absolute
		top: .75em
		left: 1.5em
		text-transform: uppercase
		font-size: .8em


	/*
	 * Modifiers
	 */

	&--has-error &
		&-input
			border-color: #dc3545
		&-label
			color: #dc3545

	&--has-focus &
		&-input
			border-color: #528B8B

		&-label
			color: #528B8B
