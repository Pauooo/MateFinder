@require "app/styles/charte"

#matchingform
	width: 25em
	display: flex
	flex-direction: column
	align-items: center
	padding: 1em 2em
	background-color: $purple-grey
	color: white
	font-size: 1.8em
	line-height: 1.5
	margin: 1em

	label
		display: flex
		justify-content: center
		font-style: 1.5em
		width: 100%

	.test
		width: 100%
		margin-left: 1em
		margin-bottom: 1em
		font-family: "Roboto Slab", serif

		select
			width: 100%
			height: 2em
			text-align: center
			text-align-last: center
			border: 0
			color: $purple-grey
			border: .15em solid $yellow
			background-color: $grey
			border-radius: 1em
			-webkit-appearance: none
			-moz-appearance: none
			text-indent: 1px
			text-overflow: ""
			font-size: .7em
			font-family: "Roboto Slab", serif
			font-weight: bold

			&::-ms-expand
				display: none

	.label
		text-align: right
		width: 100%
		font-size: 1em

	#labelswitch
		margin-bottom: 1em


		.switch
			margin: auto

		#team
			margin-left: .2em

		.nochoice
			opacity: .3

	button
		width: 35%
		font-size: 1em
		background-color: $yellow
		color: $purple-grey
		border: 0
		border-radius: .5em
		margin-top: 1em
		font-family: "Roboto Slab", serif
		box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.50)

		.fa-bomb
			margin-left: 1em

	button:hover
		.fa-bomb
			animation-name: tossing
			-webkit-animation-name: tossing
			animation-duration: .2s
			-webkit-animation-duration: .2s
			animation-iteration-count: infinite
			-webkit-animation-iteration-count: infinite

	button:focus
		box-shadow: none
		transform: translateX(2px) translateY(2px)


@keyframes tossing
		0%
				transform: rotate(10deg)
		50%
				transform: rotate(-10deg)
		100%
				transform: rotate(10deg)
