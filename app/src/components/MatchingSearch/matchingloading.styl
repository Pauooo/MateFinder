@require "app/styles/charte"

#matchingloading
	display: flex
	flex-direction: column
	align-items: center
	padding: 1em
	background-color: $purple-grey
	color: white
	font-size: 2em

#content
	width: 40em
	text-align: left
	font-size: 1.2em

	h1
		background-color: $purple-grey
		color: $yellow
		padding: .5em
		padding-left: 1em
		margin: .5em 0 1em 0
		font-size: 2em
		font-weight: 600

	p
		color: $purple-grey
		margin-bottom: .5em

	#game
		color: $yellow
		font-weight: 600

	#infoqueue
		text-decoration: underline

	#streamspanel
		display: flex
		justify-content: space-between

		.stream
			text-align: center

			h3
				margin-bottom: .5em
				color: $purple-grey

			a
				background: none
				margin: 0
				padding: 0

			img
				width: 95%
				margin: 0
