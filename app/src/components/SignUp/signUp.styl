@require "app/styles/charte"

.form
		margin-top: .5em

		&.form-submit--signup
				display: flex
				align-items: center
				justify-content: center

#signup-submit
			background: $yellow
			border: .1em solid $yellow
			border-radius: .5em
			padding: .4em
			color: $purple-grey
			font-weight: bold
			font-size: 1.3em
			margin: 0.5em

.error-message
		font-size: 0.8em
		line-height: 2
		margin: .5em 0
		background-color: #cc0000
		color: #FFF
		transition: 3s

.cancel
		padding: 0
		font-weight: 400
		color: $yellow
