@require "app/styles/charte"

.form
		margin-top: .5em
		width: 18em

		&.form-submit--signup
				display: flex
				align-items: center
				justify-content: center

#signup-submit
			background: $yellow
			border: .1em solid $yellow
			border-radius: .5em
			padding: .4em
			color: $purple-grey
			font-weight: bold
			font-size: 1.3em
			margin: 0.5em
			box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.50)

			&:focus
				box-shadow: none
				transform: translateX(2px) translateY(2px)
.cancel
		padding: 0
		font-weight: 400
		color: $yellow

.error-message
		font-size: 1em
		width: 100%
		line-height: 1.2
		margin: .5em 0
		padding: .5em
		font-weight: 600
		border: .2em solid #FF4C4C
		border-radius: .2em
		color: #FF4C4C
		animation-name: slideDown
		animation-duration: 1s
		animation-timing-function: ease
		visibility: visible !important

		&::before
			content: ""
			background: url("/img/sad.svg") no-repeat bottom left
			background-size: contain
			height: 1.5em
			width: 1.5em
			margin-right: .6em


@keyframes slideDown
	0%
		transform: translateY(-100%)
	50%
		transform: translateY(8%)
	65%
		transform: translateY(-3%)
	80%
		transform: translateY(3%)
	95%
		transform: translateY(-1%)
	100%
		transform: translateY(0%)
